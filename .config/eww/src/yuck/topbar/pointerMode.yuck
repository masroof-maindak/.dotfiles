(defwidget pointer_module []
    (eventbox
        :tooltip "Click to change mouse drag action to ${mode == 'move' ? 'resize' : 'move/swap'}"
        :onclick "$HOME/.config/river/pointer_action.sh"

        (box
          	(label
          	    :class "icons"
          	    :text "${mode == 'move' ? '󰆾' : '󰩨'}"))))

(defvar mode "resize")
